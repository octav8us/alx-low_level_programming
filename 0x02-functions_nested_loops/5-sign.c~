#include "home.h"
/**
 * print_sign - checks if @n is bigger or smaller or equal to 0
 * prints + or - or 0 respectively
 * @n: the number to be checked
 * Return: 1 if @n greater than 0, -1 if smaller and 0 if @n is zero
 */

int Print_sign(int n)
{
	if (n > 0)
	{
		_putchar ('+');
		return (1);
	}
	else if (n < 0)
	{
		_putchar ('-');
		return (-1);
	}
	else
	{
		_putchar ('0');
		return (0);
	}

}
