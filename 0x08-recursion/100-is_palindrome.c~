/**
 * is_palindrome - checks if string is palindrome
 * @s: the string in question
 * Return: 1 if a string is a palindrome and 0 if not.
 */


int is_palindrome (char *s)
{
	int length = 0;
	
	if (*s == '\0')
		return (1);
	while (*s)
		leghth++;
	if (s[0] == s[length -1])
		s[length - 1] = '\0';
	return is_palindrome(&s[1]);

	return (0);


}
